@article{banu_2015,
  title = {Impacts {{Of El Ni{\~n}o Southern Oscillation And Indian Ocean Dipole On Dengue Incidence In Bangladesh}}},
  author = {Banu, Shahera and Guo, Yuming and Hu, Wenbiao and Dale, Pat and Mackenzie, John S. and Mengersen, Kerrie and Tong, Shilu},
